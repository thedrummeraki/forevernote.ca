<div>
    <div class="container-fluid">
        <!--<a class="btn waves-effect waves-light deep-orange lighten-2" href="/">How does it work?</a>-->
        <a class="btn waves-effect waves-light right red lighten-1" href="/register">Register</a>
    </div>
    <div class="vertical-center">
        <div class="wrapper">
        <div class="center">
            <h4>{{{ititle}}}</h4>
            <p class="catch-phrase">
                Making note-taking for students painless.
            </p>

            <div class="container">
                <div class="container">
                    <div id="login-messages" class="center">
                        <div class="login-register-error">
                            <span id="error-message"></span>
                        </div>
                        <div class="login-register-waiting">
                            <span id="waiting-message"></span>
                        </div>
                        <div class="login-register-success">
                            <span id="success-message"></span>
                        </div>
                    </div>
                    <div class="row">
                        <form id="login-form" onsubmit="login(); return false;">
                            <div class="row">
                                <div class="input-field col s12 m5">
                                    <i class="material-icons prefix">account_circle</i>
                                    <input id="username" type="text" class="validate" value="{{{username}}}">
                                    <label data-error="Your username or password is incorrect." for="username">Username</label>
                                </div>
                                <div class="input-field col s12 m5">
                                    <i class="material-icons prefix">vpn_key</i>
                                    <input id="password" type="password" class="validate">
                                    <label for="password">Password</label>
                                </div>
                                <div style="margin-top: 10px;" class="col s12 m2">
                                    <button class="btn btn-floating" value="login" id="submit">
                                        <i class="material-icons prefix">send</i>
                                    </button>
                                    <div id="loader" class="hide">
                                        <div class="preloader-wrapper small active">
                                            <div class="spinner-layer spinner-green-only">
                                                <div class="circle-clipper left">
                                                    <div class="circle"></div>
                                                </div>
                                                <div class="gap-patch">
                                                    <div class="circle"></div>
                                                </div>
                                                <div class="circle-clipper right">
                                                    <div class="circle"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <a style="text-decoration: underline; margin-top: -10px;" href="/password-reset">Forgot your password?</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <script type="text/javascript">
            var username = document.getElementById("username");
            var password = document.getElementById("password");

            if (username.value) {
                password.focus();
            }
        </script>
        <script src="/js/login.js" type="text/javascript"></script>
    </div>
</div>