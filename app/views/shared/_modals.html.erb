<div>
    <div id="modal_user_edit" class="modal modal-fixed-footer">
        <div class="modal-content">
            <div class="center">
                <h4><%= current_user.get_name %></h4>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col s3">
                        <img class="responsive-img circle" src="https://www.gravatar.com/avatar/<%= current_user.get_email_hash + "?s=250" %>">
                    </div>
                    <div class="col s9">
                        <div class="row">
                            <div class="col s12 m12">
                                <h6 id="profile-settings-explanation">Change your account information here</h6>
                            </div>
                        </div>
                        <div class="row thin-row">
                            <div class="input-field col s12 m6">
                                <i class="material-icons prefix">account_circle</i>
                                <input id="username" type="text" class="validate" value="<%= current_user.username %>">
                                <label data-error="Please enter a username." for="username">Your username</label>
                            </div>
                            <div class="input-field col s12 m6">
                                <i class="material-icons prefix">face</i>
                                <input id="name" type="text" class="validate" value="<%= current_user.name %>">
                                <label data-error="Please enter a name" for="name">Your name</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12 m6">
                                <i class="material-icons prefix">vpn_key</i>
                                <input id="password" type="password" class="validate">
                                <label data-error="This password is too short." for="password">Enter a new password</label>
                            </div>
                            <div class="input-field col s12 m6">
                                <input id="cpassword" type="password" class="validate">
                                <label data-error="This password doesn't match the original password." for="cpassword">Confirm your new password</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12 m12">
                                <i class="material-icons prefix">email</i>
                                <input id="email" type="email" class="validate" value="<%= current_user.email_address %>">
                                <label data-error="Your email is not valid." for="email">Your email address</label>
                            </div>
                        </div>
                        <div class="row hide">
                            <div class="file-field input-field col s12 m12">
                                <div class="btn">
                                    <span>Change profile picture</span>
                                    <input type="file">
                                </div>
                                <div class="file-path-wrapper">
                                    <input class="file-path validate" type="text">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat">Cancel</a>
            <a href="#!" class="modal-action modal-close waves-effect green lighten-1 btn-flat">SAVE</a>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('.modal').modal();
    });
</script>
